<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/estilo.css">
  <link rel="stylesheet" href="/css/cadastrar.css">
  <link rel="stylesheet" href="/css/header.css">

  <link rel="stylesheet" href="/css/footer.css">
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>
  <%- include('../partials/header') %>

    <% if(!(typeof message == 'undefined')){ %>
      <div class="alert alert-<%= type %>" role="alert">
        <%= message %>
      </div>
	  <% } %>

    <main>
      <h1 class="list">Lista De Produtos</h1>
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Slug</th>
            <th scope="col">Preço</th>
            <th scope="col">Categoria</th>
            <th scope="col">Descrição</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <% produtos.forEach(produto=> { %>
          <tbody>
            <tr>
              <th scope="row">
                <%= produto.id_produto %>
              </th>
              <th scope="row">
                <%= produto.nome %>
              </th>
              <th scope="row">
                <%= produto.slug %>
              </th>
              <th scope="row">
                <%= produto.preco %>
              </th>
              <th scope="row">
                <%= produto.categorias.nome %>
              </th>
              <th scope="row">
                <%= produto.descricao %>
              </th>
              <th scope="row">
                <a href="/alterar/<%= produto.id_produto %>" class="btn btn-dark">Alterar</a>
                <form action="/deletar/<%= produto.id_produto %>?_method=DELETE" method="post">
                  <!-- method-override para deletar -->
                  <button type="submit" id="botao" class="btn btn-danger">Excluir</button>
                </form>
              </th>

            </tr>

            <% }); %>
          </tbody>

      </table>
    </main>
    <%- include('../partials/footer') %>

</body>
<script src="/js/validar.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
  integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
