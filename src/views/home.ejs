<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/estilo.css">
  <link rel="stylesheet" href="/css/animation.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/footer.css">
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>
  <!-- Header -->
  <%- include('./partials/header'); %>

    <main>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="bottom:17px">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <a href="/produtos">
              <img class="d-block w-100" src="/img/carrossel/banner-ofertas2.1.jpg" alt="First slide">
            </a>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/img/carrossel/banner-bebidas.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/img/carrossel/banner-refrigerantes.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/img/carrossel/banner-perfumaria.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/img/carrossel/banner-limpeza.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/img/carrossel/banner-seara.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <%- include('./partials/ofertas') %>

      <!-- Promoções -->
      <div class="container">
        <h1 class="home-title">PROMOÇÕES</h1>
        <section class="produtos-container">
          <section class="produtos">
            <% promotionalProducts.forEach(produto=> { %>
              <div class="cartao" style="background-color: #ff5001;">
                <img class="img-r" src="<%= produto.imagem%>">
                <div class="cartao-conteudo">
                  <p><a class="a3 text-white h5" href="/produto/<%= produto.slug%>">
                      <%= produto.nome %>
                    </a></p>
                    <p class="my-0" style="text-decoration: line-through">
                      <del>R$ <%= produto.preco%>,00</del>
                    </p>
                  <span class="home text-white h5">
                    R$ <%= produto.preco_promocao%>,00
                  </span>
                </div>
              </div>
              <% }) %>
          </section>
        </section>
      </div>

      <!-- Ofertas -->
      <div class="container">
        <h1 class="home-title">SUPER OFERTAS</h1>
        <section class="produtos-container">
          <section class="produtos">
            <% products.forEach(produto=> { %>
              <div class="cartao">
                <img class="img-r" src="<%= produto.imagem%>">
                <div class="cartao-conteudo">
                  <p><a class="a3" href="/produto/<%= produto.slug%>">
                      <%= produto.nome %>
                    </a></p>
                  <span class="home">
                    R$ <%= produto.preco%>,00
                  </span>
                </div>
              </div>
              <% }) %>
          </section>
        </section>
      </div>





    </main>

    <%- include('./partials/footer'); %>
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>